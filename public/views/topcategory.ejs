<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head.ejs %>
</head>

<body>
  <header>
    <% include partials/header.ejs %>
  </header>
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-8">
        <% if(successMsg){ %>
        <div class="alert alert-success" role="alert">
          <%= successMsg %>
        </div>
        <% }else if (error){ %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
        <% } %>

        <form method="POST" action="/api/addtopcategory">
          <div class="form-group">
            <label for="top-ctg-name">Category</label>
            <input class="form-control" id="top-ctg-name" type="text" name="top_ctg_name" required
              placeholder="Enter category name" />
          </div>
          <div class="form-group">
            <input class="btn btn-primary" type="submit" required value="Add" />
          </div>
        </form>
      </div>
    </div>
  </div>
</body>

</html>