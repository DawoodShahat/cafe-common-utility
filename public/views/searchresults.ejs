<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head.ejs %>
</head>

<body>
    <header>
        <% include partials/header.ejs %>
    </header>
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-9">
                <h1 class="mb-3"><%= pagetitle %></h1>
                <% if(!hits || !hits.length){ %>
                <ul class="list-group">
                    <li class="list-group-item">No Search Results</li>
                </ul>
                <% }else { %>
                <ul class="list-group">
                    <% hits.forEach(hit => { %>
                    <li class="list-group-item custom-list-item">
                        <% hit.forEach(item => { %>
                        <a class="file-link" href="/api/search/<%= item.objectID %>">
                            <%= item.fileName %>
                        </a>
                        <% }); %>
                    </li>
                    <% }); %>
                </ul>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>